{
    "compilerOptions": {
        "allowJs": false,
        "outDir": "./build",
        "pretty": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "target": "es2020"
    },

    "include": [
        "./source/*",
        "./source/**/*"
    ],

    "ts-node": {
        "compiler": "tsc",
        "pretty": true,
    }
}